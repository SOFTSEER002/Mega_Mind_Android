<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.LoginActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbluebottom">

        <TextView
            android:id="@+id/headText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/baloo"
            android:text="Megamind Abacus"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="27sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/baloo"
            android:text="Abacus"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="27sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:src="@drawable/under_progress"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:visibility="visible">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/level_bg_image"
            android:fontFamily="@font/avenirheavy"
            android:text="Log in"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="#fff"
                android:padding="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:drawableLeft="@drawable/username_icon"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/avenirmedium"
                    android:gravity="center_vertical"
                    android:text="Login code"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.1"
                    android:background="#fff"
                    android:digits="0123456789qwertzuiopasdfghjklyxcvbnmQWERTYUIOPLKJHGFDSAZCVBNM_"
                    android:fontFamily="@font/avenirmedium"
                    android:hint="Enter code to login"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
              />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="20dp"
                android:background="#fff"
                android:padding="10dp"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".98"
                    android:drawableStart="@drawable/password_icon"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/avenirmedium"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:text="Password"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/userPassword"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".99"
                    android:background="#fff"
                    android:fontFamily="@font/avenirmedium"
                    android:hint="*****"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="7dp" />

                <Button
                    android:id="@+id/visible_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.01"
                    android:background="@drawable/hide_icon" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_bg_image"
            android:fontFamily="@font/avenirheavy"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="8dp"
            android:text="Sign IN"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>