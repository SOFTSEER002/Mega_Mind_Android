<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="75dp"
                    android:background="@drawable/level_bg_image"
                    android:fontFamily="@font/avenirheavy"
                    android:text="Brain Stretches"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#585858" />

                <RelativeLayout
                    android:id="@+id/text_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/topbluebottom">

                    <TextView
                        android:id="@+id/headText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/baloo"
                        android:text="Megamind"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="27sp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/headText"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-18dp"
                        android:fontFamily="@font/baloo"
                        android:text="Abacus"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="27sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp">


                        <Button
                            android:id="@+id/minus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/circle_white"
                            android:fontFamily="@font/avenirmedium"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:text="+"
                            android:textColor="#9E9E9E"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="305dp"
                            android:layout_height="79dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <Button
                                android:id="@+id/level1btn"
                                android:layout_width="165dp"
                                android:layout_height="55dp"
                                android:layout_margin="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/level_selection_button"
                                android:fontFamily="@font/avenirbook"
                                android:text="Power Exercise"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/level2btn"
                                android:layout_width="165dp"
                                android:layout_height="55dp"
                                android:layout_margin="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/level_selection_button"
                                android:fontFamily="@font/avenirbook"
                                android:text="Addition"
                                android:textAllCaps="false"
                                android:textColor="@color/grayishbrown" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="18dp">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/circle_white" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/plus"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="23dp"
                            android:src="@drawable/light_grey"
                            android:textColor="#9E9E9E"
                            android:textSize="25dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/multiplyb"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/circle_white"
                            android:fontFamily="@font/avenirmedium"
                            android:text="X"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#9E9E9E" />

                        <Button
                            android:id="@+id/divide"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/circle_white"
                            android:fontFamily="@font/avenirmedium"
                            android:text="รท"
                            android:textColor="#9E9E9E"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="307dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <Button
                                android:id="@+id/level3btn"
                                android:layout_width="165dp"
                                android:layout_height="55dp"
                                android:layout_margin="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/level_selection_button"
                                android:fontFamily="@font/avenirbook"
                                android:text="Multiplication"
                                android:textAllCaps="false"
                                android:textColor="@color/grayishbrown" />

                            <Button
                                android:id="@+id/divisionButton"
                                android:layout_width="165dp"
                                android:layout_height="55dp"
                                android:layout_margin="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/level_selection_button"
                                android:fontFamily="@font/avenirbook"
                                android:text="Division"
                                android:textAllCaps="false"
                                android:textColor="@color/grayishbrown" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/levelNoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:background="@drawable/level_bg_image"
                            android:elevation="20dp"
                            android:fontFamily="@font/avenirheavy"
                            android:gravity="center"
                            android:text="Power exercise"
                            android:textAllCaps="false"
                            android:textColor="@color/black_zeplin"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewH"
                            android:layout_width="376dp"
                            android:layout_height="250dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:id="@+id/digitSizeDialogLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="10dp"
                                android:visibility="gone"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="5dp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/digitSizeTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp"
                                        android:text="Digit Size"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <Spinner
                                        android:id="@+id/digitSizeSpinner"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".7"
                                        android:dropDownWidth="180dp"
                                        android:fontFamily="@font/avenirbook"
                                        android:overlapAnchor="false"
                                        android:popupBackground="@drawable/dropdownmenu_bg_image"
                                        android:popupTheme="@style/SpinnerDropDown"
                                        android:textAlignment="center" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/GreyBackground"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/digitNoTxt"
                                        android:layout_width="190dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:padding="10dp"
                                        android:text="No. of digits"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <ImageView
                                        android:id="@+id/speedDownNoDigitBtn"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/speeddown_button" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/noOfDigitText"
                                        android:layout_width="90dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/avenirheavy"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="1"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/greyFontColour"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <!--add plus here-->
                                    <ImageView
                                        android:id="@+id/addDigitButton"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/speedup_button" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="200dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp"
                                        android:text="Flickering speed"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />
                                    <!--add minus here-->

                                    <ImageView
                                        android:id="@+id/speedDownBtn"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/speeddown_button" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/flickeringSpeedTextView"
                                        android:layout_width="90dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/avenirheavy"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="400"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/greyFontColour"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <!--add plus here-->
                                    <ImageView
                                        android:id="@+id/addButton"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/speedup_button" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="left"
                                    android:layout_weight="1"
                                    android:background="@color/GreyBackground"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:visibility="gone">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="160dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".1"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:padding="10dp"
                                        android:text="No. of questions"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <Spinner
                                        android:id="@+id/noOfQuestionsDivisor"
                                        android:layout_width="227dp"
                                        android:layout_height="475dp"
                                        android:layout_weight="0.9"
                                        android:dropDownWidth="140dp"
                                        android:fontFamily="@font/avenirbook"
                                        android:overlapAnchor="false"
                                        android:popupBackground="@drawable/dropdownmenu_bg_image_rotated"
                                        android:popupTheme="@style/SpinnerDropDown" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/digitSizeDialogLayoutDivisor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="10dp"
                                android:visibility="visible"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="5dp">


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/digitSizeTxtDivisor"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp"
                                        android:text="Dividend Size"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <Spinner
                                        android:id="@+id/digitSizeSpinnerDivisor"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".65"
                                        android:dropDownWidth="180dp"
                                        android:fontFamily="@font/avenirbook"
                                        android:overlapAnchor="false"
                                        android:popupBackground="@drawable/dropdownmenu_bg_image"
                                        android:popupTheme="@style/SpinnerDropDown"
                                        android:textAlignment="center" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/GreyBackground"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:weightSum="2">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/digitNoTxtDivisor"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.45"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:padding="10dp"
                                        android:text="Divisor size"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <Spinner
                                        android:id="@+id/noOfDigitsSpinner"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.65"
                                        android:dropDownWidth="150dp"
                                        android:fontFamily="@font/avenirbook"
                                        android:overlapAnchor="false"
                                        android:popupBackground="@drawable/dropdownmenu_bg_image"
                                        android:popupTheme="@style/SpinnerDropDown"
                                        android:textAlignment="center"
                                        android:visibility="visible" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="200dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp"
                                        android:text="Flickering speed"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />
                                    <!--add minus here-->

                                    <ImageView
                                        android:id="@+id/speedDownBtnDivisor"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/speeddown_button" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/flickeringSpeedTextViewDivisor"
                                        android:layout_width="90dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/avenirheavy"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="400"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/greyFontColour"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <!--add plus here-->
                                    <ImageView
                                        android:id="@+id/addButtonDivisor"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:src="@drawable/speedup_button" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="left"
                                    android:layout_weight="1"
                                    android:background="@color/GreyBackground"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp"
                                    android:visibility="gone">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="160dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".1"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:padding="10dp"
                                        android:text="No. of questions"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <Spinner
                                        android:id="@+id/noOfQuestions"
                                        android:layout_width="227dp"
                                        android:layout_height="475dp"
                                        android:layout_weight="0.9"
                                        android:dropDownWidth="140dp"
                                        android:fontFamily="@font/avenirbook"
                                        android:overlapAnchor="false"
                                        android:popupBackground="@drawable/dropdownmenu_bg_image_rotated"
                                        android:popupTheme="@style/SpinnerDropDown" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/powerDialogLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="10dp"
                                android:visibility="gone"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="5dp"
                                    android:weightSum="2">


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/powerDigitSizeTxt"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp"
                                        android:text="Digit Size"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <Spinner
                                        android:id="@+id/powerDigitSizeSpinner"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.00"
                                        android:dropDownWidth="150dp"
                                        android:fontFamily="@font/avenirbook"
                                        android:overlapAnchor="false"
                                        android:popupBackground="@drawable/dropdownmenu_bg_image"
                                        android:popupTheme="@style/PowerSpinnerDropDown"
                                        android:textAlignment="center" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/GreyBackground"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="5dp"
                                    android:weightSum="2">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/exceriseType"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".95"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:padding="10dp"
                                        android:text="Exercise type"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <Spinner
                                        android:id="@+id/exceriseSpinner"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.05"
                                        android:dropDownWidth="150dp"
                                        android:fontFamily="@font/avenirbook"
                                        android:overlapAnchor="false"
                                        android:popupBackground="@drawable/dropdownmenu_bg_image"
                                        android:popupTheme="@style/PowerSpinnerDropDown"
                                        android:textAlignment="center" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="5dp"
                                    android:weightSum="2">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".9"
                                        android:fontFamily="@font/avenirbook"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="10dp"
                                        android:text="Time"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="#727070" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.05"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/speedDownBtnPower"
                                            android:layout_width="24dp"
                                            android:layout_height="28dp"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:src="@drawable/speeddown_button" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/flickeringSpeedTextViewPower"
                                            android:layout_width="90dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/avenirheavy"
                                            android:gravity="center"
                                            android:padding="10dp"
                                            android:text="1 Minute"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/greyFontColour"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                        <!--add plus here-->
                                        <ImageView
                                            android:id="@+id/addButtonPower"
                                            android:layout_width="24dp"
                                            android:layout_height="28dp"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:src="@drawable/speedup_button" />
                                    </LinearLayout>


                                    <Spinner
                                        android:id="@+id/timeSpinner"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:dropDownWidth="150dp"
                                        android:fontFamily="@font/avenirbook"
                                        android:overlapAnchor="false"
                                        android:popupBackground="@drawable/dropdownmenu_bg_image"
                                        android:popupTheme="@style/PowerSpinnerDropDown"
                                        android:textAlignment="center"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/startButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_bg_image"
                        android:fontFamily="@font/avenirheavy"
                        android:paddingBottom="12dp"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="21dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Button
                        android:id="@+id/getAssignmentButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/button_bg_image"
                        android:fontFamily="@font/avenirheavy"
                        android:paddingBottom="12dp"
                        android:text="Go To Assignment"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="21dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>