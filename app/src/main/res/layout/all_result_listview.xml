<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/spalsh_background"
    android:orientation="horizontal"
    android:weightSum="1"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    tools:context=".Activities.MainNavigation">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="10dp">
        <ImageView
            android:src="@drawable/assignments_multiplication_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/calc_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="@font/avenirheavy"
            android:text="Multiplication"
            android:textColor="@color/purplegrayish"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:textColor="@color/greyFontColor"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/avenirmedium"
            android:text="07 Oct 2019 to 14 Oct 2019"/>
    </LinearLayout>

    <TextView
        android:id="@+id/percentage"
        android:gravity="center_horizontal|center_vertical"
        android:text="xx%"
        android:textAlignment="center"
        android:fontFamily="@font/avenirheavy"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/resultspercentage_bg_image"/>


</LinearLayout>